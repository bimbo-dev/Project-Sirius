@model Sirius.Web.Models.LoginViewModel

@section styles{

}

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="col-md-offset-1 col-md-10 login-box">
    <h1> </h1>
    <div class="text-center">
        <h1>Sign In</h1>
        <h5>Don't have an account? <a href="~/user/register">Register Here</a></h5>
        <br>
    </div>
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { id = "login-form" }))
    {
        if (ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
        {
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @Html.ValidationSummary()
            </div>
        }
        <div class="form-group has-feedback">
            <span class="fa fa-2x fa-user form-control-feedback"></span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", @placeholder = "Email", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>
        <div class="form-group has-feedback">
            <span class="fa fa-2x fa-lock form-control-feedback"></span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", @placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
        </div>
        @Html.AntiForgeryToken()
        <div class="col-xs-12">
            <div class="checkbox icheck">
                <label>
                    @Html.CheckBoxFor(m => m.RememberMe) Keep me signed in.
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <br>
                <a href="javascript:document.getElementById('login-form').submit()" class="btn bg-purple btn-block btn-lg btn-flat">Sign In</a>
            </div>
        </div>
        <div class"row">
            <br>
            <a href="/recover">I forgot my password</a>
        </div>
    }
</div>

@section scripts{

    <script type="text/javascript">
        
    </script>
}

