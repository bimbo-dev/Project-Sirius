@model IEnumerable<Sirius.Services.DTO.StaffStatusDTO>

@if (Model.Count() > 0)
{
    <table class="table" id="statuslist">
        <thead>
            <tr>
                <th>Name</th>
                <th>Short Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var status in Model)
            {
                <tr>
                    <td>@status.StatusName</td>
                    <td>@status.ShortName</td>
                    <td>
                        <a class="btn btn-warning btn-xs" data-toggle="modal" href="#deptModal_@status.ShortName" id="updateDepartment"><i class="fa fa-edit"></i></a>
                        <a href="#" data-href="@Url.Action("RemoveStatus", "Admin", new { statusId = status.StaffStatusId })" id="deleteStatus" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    foreach (var status in Model)
    {
        <div class="modal fade" id="deptModal_@status.ShortName" role="dialog">
            <div class="modal-dialog">
                @{ Html.RenderAction("UpdateStatus", "Admin", new { staffStatusId = status.StaffStatusId }); }
            </div>
        </div>
    }
}
else
{

}
    