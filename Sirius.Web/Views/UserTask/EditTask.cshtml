@model Sirius.Web.Models.EditTaskViewModel

<div class="modal fade" id="editTask" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="fa fa-times"></i></span>
                </button>
                <h4 class="modal-title">Edit Task</h4>
            </div>
            @using (Ajax.BeginForm("EditTask", "UserTask", new AjaxOptions()
                {
                    OnBegin = "editBegin",
                    OnComplete = "editComplete",
                    OnSuccess = "editSuccess",
                    OnFailure = "editFailure",
                    HttpMethod = "Post",
                    InsertionMode = InsertionMode.Replace
                }))
            {
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserTaskId)
                    <div class="form-group">
                        <label> Title: </label>
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @placeholder = "Enter Task Title", autocomplete = "off" })
                    </div>
                    <div class="form-group">
                        <label> Description: </label>
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Please provide a detailed description for this task", @rows = 3, autocomplete = "off" })
                    </div>
                </div>
                <div class="modal-footer">
                    <a id="editTaskButton" onclick="$(this).closest('form').submit()" class="btn btn-success pull-right">Update Task</a>
                    <a class="btn btn-default pull-left" data-dismiss="modal">Close</a>
                </div>
            }
        </div>
    </div>
</div>