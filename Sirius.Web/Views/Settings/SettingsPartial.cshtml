@model Sirius.Web.Models.SettingsPartialViewModel

@{
    var link = Model.Active;
    const string Active_Link = "active";
    switch (link)
    {
        case "account":
            ViewBag.Account = Active_Link;
            break;
        case "password":
            ViewBag.Password = Active_Link;
            break;
        case "department":
            ViewBag.Department = Active_Link;
            break;
        case "supervisor":
            ViewBag.Supervisor = Active_Link;
            break;
        case "organization":
            ViewBag.Organization = Active_Link;
            break;
        default:
            break;
    }
}

<div class="col-md-4">
    <div class="box box-widget widget-user-2">
        <!-- Add the bg color to the header using any of the bg-* classes -->
        <div class="widget-user-header bg-purple">
            <div class="widget-user-image">
                <img class="img-circle" src="@Url.Action("GetUserIdAvatar", "Base", new { userId = Model.UserId })" alt="User Avatar">
            </div><!-- /.widget-user-image -->
            <h5 class="widget-user-username">@Model.Firstname<br> @Model.Lastname</h5>
        </div>
        <div class="box-footer no-padding">
            <ul class="nav nav-stacked">
                <li class="text-center"><a href="#"><span class="pull-left"><i class="fa fa-arrow-circle-o-left"></i></span> Back to profile</a></li>
            </ul>
        </div>
    </div>

    <div class="box">
        <div class="box-body no-padding">
            <ul class="nav nav-stacked">
                <li class="@ViewBag.Account"><a href="~/settings/account">Account <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
                <li class="@ViewBag.Password"><a href="~/settings/password">Password <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
                <li class="@ViewBag.Department"><a href="~/settings/department">Department <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
                <li class="@ViewBag.Supervisor"><a href="~/settings/supervisor">Supervisor <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
                <li class="@ViewBag.Organization"><a href="~/settings/organization">@Model.OrganizationName <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
                <li><a href="#">Notifications <span class="pull-right"><i class="fa fa-arrow-circle-o-right"></i></span></a></li>
            </ul>
        </div>
    </div>

</div>