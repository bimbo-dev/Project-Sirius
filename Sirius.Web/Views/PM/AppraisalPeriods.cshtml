@model Sirius.Web.Models.AppraisalPeriodViewModel

<div class="box box-solid">
    <div class="box-header">
        <h3 class="box-title"><b>Appraisal Periods for this Cycle</b></h3>
    </div>
    <div class="box-body">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>S/No.</th>
                        <th>Begin</th>
                        <th>End</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Periods.Count; i++)
                    {
                        int j = i + 1;
                        <tr>
                            <td><span class="label label-info">@j</span></td>
                            <td>@Model.Periods[i].Begin</td>
                            <td>@Model.Periods[i].End</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>